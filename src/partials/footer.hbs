<footer class="bg-white">
    <div class="lg:bg-fixed bg-center bg-cover bg-no-repeat relative clamp-[py,45px,60px] border-y border-black/10" style="background-image: url('assets/image/abstract.jpg')">
        <div class="absolute-full bg-text mix-blend-soft-light"></div>
        <div class="container relative z-2">
            <div class="flex sm:justify-center clamp-[gap,16px,24px] max-xl:flex-wrap max-sm:flex-col">
                {{#each contact as |item|}}
                    <a href="{{item.url}}" {{#if item.target}}target="{{item.target}}"{{/if}} class="group/c inline-flex items-center clamp-[gap,8px,16px]">
                        <span class="clamp-[size,32px,62px] flex-center">
                            <i class="{{item.icon}} clamp-[text,20px,32px] clamp-[h,18px,32px] text-secondary lg:transition-colors lg:duration-300 lg:group-hover/c:text-primary"></i>
                        </span>
                        <span>
                            <span class="clamp-[text,18px,30px] lg:transition-all lg:duration-450 lg:underline-text lg:group-hover/c:bg-size-full group-not-last/c:whitespace-nowrap">{{item.value}}</span>
                        </span>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
    <div>
        <div class="container">
            <div x-data="{ activeIndex: -1 }" class="grid grid-cols-12 gap-6 max-lg:grid-cols-1 max-lg:py-7.5">
                <div class="lg:col-span-3 lg:border-r border-black/10 lg:clamp-[py,24px,50px] clamp-[pr,20px,32px]">
                    <img src="assets/image/logo.svg" alt="" loading="eager" width="227" height="75" class="clamp-[w,180px,227px] h-auto clamp-[mb,16px,30px]">
                    <p class="text-[16px] leading-relaxed text-dark/80 clamp-[mb,24px,50px]">Dil,Konuşma Bozuklukları ve Ergoterapi Alanında Uluslararası Standartlarda Hizmet Veriyoruz.</p>
                    <ul class="flex flex-wrap clamp-[gap,8px,14px]">
                        {{#each socialMedia as |item|}}
                            <li>
                                <a href="{{item.url}}" target="_blank" title="{{item.title}}" class="clamp-[size,40px,44px] bg-dark/10 border border-dark/10 rounded-full flex-center lg:transition-colors lg:duration-300 lg:hover:bg-primary lg:hover:border-primary lg:hover:*:text-white">
                                    <i class="{{item.icon}} text-[15px] h-15 text-dark lg:transition-colors lg:duration-300"></i>
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-span-1 max-xxl:hidden"></div>
                <div class="lg:col-span-2 lg:clamp-[py,24px,50px]">
                    <div class="max-lg:flex max-lg:items-center max-lg:justify-between max-lg:gap-2"
                        @click="if (!$store.data.isDesktop) { activeIndex = activeIndex === 0 ? -1 : 0 }">
                        <p class="clamp-[text,18px,24px] text-dark">Menü</p>
                        <i class="icon-angle-down text-[12px] h-3 text-dark transition-transform duration-300 lg:hidden!" :class="{ 'scale-y-[-1]': activeIndex === 0 }"></i>
                    </div>
                    <div x-show="$store.data.isDesktop || (!$store.data.isDesktop && activeIndex === 0)" x-collapse.duration.300ms>
                        <ul class="clamp-[mt,8px,12px]">
                            {{#each footer.menu as |item|}}
                                <li>
                                    <a href="{{item.url}}" class="inline-block clamp-[py,4px,8px] lg:hover:*:bg-size-full lg:hover:*:text-black">
                                        <span class="text-[16px] leading-relaxed text-dark/80 lg:transition-all lg:duration-300 lg:underline-text">{{item.title}}</span>
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="xxl:col-span-6 lg:clamp-[py,24px,50px] max-xxl:lg:col-span-7">
                    <p class="clamp-[text,18px,24px] text-dark clamp-[mb,12px,20px] max-lg:mb-4">Çalışma Alanlarımız</p>
                    <div class="grid grid-cols-3 gap-6 max-lg:grid-cols-1 max-lg:gap-3">
                        {{#each footer.workingAreas as |item|}}
                            <div>
                                <div class="max-lg:flex max-lg:items-center max-lg:justify-between max-lg:gap-2"
                                    @click="if (!$store.data.isDesktop) { activeIndex = activeIndex === {{add @index 1}} ? -1 : {{add @index 1}} }">
                                    <p class="clamp-[text,16px,18px] leading-relaxed font-medium text-black/80 lg:mb-2">{{item.title}}</p>
                                    <i class="icon-angle-down text-[12px] h-3 text-dark transition-transform duration-300 lg:hidden!" :class="{ 'scale-y-[-1]': activeIndex === {{add @index 1}} }"></i>
                                    <span class="block w-51 h-0.5 bg-primary max-lg:hidden"></span>
                                </div>
                                <div x-show="$store.data.isDesktop || (!$store.data.isDesktop && activeIndex === {{add @index 1}})" x-collapse.duration.300ms>
                                    <ul class="clamp-[mt,8px,12px]">
                                        {{#each item.subItems as |subItem|}}
                                            <li>
                                                <a href="{{subItem.url}}" class="inline-block clamp-[py,4px,8px] lg:hover:*:bg-size-full lg:hover:*:text-black">
                                                    <span class="text-[16px] leading-relaxed text-dark/80 lg:transition-all lg:duration-450 lg:underline-text">{{subItem.title}}</span>
                                                </a>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="border-t border-black/10">
            <div class="container clamp-[py,16px,30px]">
                <p class="text-[16px] leading-relaxed text-dark/80">© 2026. Tüm Hakları Saklıdır. Özel Artuklu Dil, Konuşma ve Ergoterapi Merkezi.</p>
            </div>
        </div>
    </div>
</footer>

<div class="fixed z-30 right-0 bottom-0 clamp-[pr,16px,30px] clamp-[pb,16px,30px] flex flex-col clamp-[gap,16px,24px]">
    <a href="{{contact.0.url}}" title="{{contact.0.value}}" class="bg-primary clamp-[size,40px,54px] flex-center rounded-full shadow-[0_0_3px_4px_rgba(255,102,0,0.35)] lg:transiton-all lg:duration-300 lg:hover:bg-dark lg:hover:shadow-[0_0_3px_4px_rgba(30,30,30,0.35)]">
        <i class="icon-phone clamp-[text,18px,24px] clamp-[h,18px,24px] text-white"></i>
